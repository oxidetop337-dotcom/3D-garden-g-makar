<script type="module">
    import * as THREE from 'three';

    let isGameRunning = false, money = 100, selected = null;
    const plants = [];

    // –ë–ê–ó–ê –î–ê–ù–ù–´–• (—Ç–µ –∂–µ 30 –≤–∏–¥–æ–≤, —Å–æ–∫—Ä–∞—â–µ–Ω–æ –¥–ª—è –ø—Ä–∏–º–µ—Ä–∞)
    const ALL_ITEMS = [
        { n: 'üçé', c: 5, cl: 0xff4d4d, r: 10, p: 90 },
        { n: 'ü•ï', c: 10, cl: 0xffa502, r: 22, p: 80 },
        { n: 'ü´ê', c: 150, cl: 0x4834d4, r: 400, p: 20 },
        { n: 'üíé', c: 2000, cl: 0x0fbcf9, r: 8000, p: 2 }
    ];

    // –§–£–ù–ö–¶–ò–ò –ú–ï–ù–Æ
    window.startGame = () => {
        document.getElementById('main-menu').style.display = 'none';
        document.getElementById('game-ui').style.display = 'block';
        isGameRunning = true;
        refreshShop();
    };

    window.exitToMenu = () => {
        saveGame();
        document.getElementById('main-menu').style.display = 'flex';
        document.getElementById('game-ui').style.display = 'none';
        isGameRunning = false;
    };

    function saveGame() {
        localStorage.setItem('garden_save', JSON.stringify({money}));
    }

    function loadGame() {
        const saved = localStorage.getItem('garden_save');
        if(saved) {
            money = JSON.parse(saved).money;
            document.getElementById('money').innerText = money;
        }
    }

    // –õ–û–ì–ò–ö–ê –ú–ê–ì–ê–ó–ò–ù–ê (—Å —Ä–æ—Ç–∞—Ü–∏–µ–π)
    function refreshShop() {
        const shopEl = document.getElementById('game-shop');
        shopEl.innerHTML = '';
        let available = ALL_ITEMS.sort(() => 0.5 - Math.random()).slice(0, 4);
        
        available.forEach((item, i) => {
            const div = document.createElement('div');
            div.className = 'shop-item' + (i === 0 ? ' active' : '');
            item.stock = Math.floor(Math.random()*5)+2;
            div.innerHTML = `<span>${item.n} $${item.c}</span> <span style="color:#e67e22">x${item.stock}</span>`;
            div.onclick = () => {
                document.querySelectorAll('.shop-item').forEach(el => el.classList.remove('active'));
                div.classList.add('active');
                selected = item;
                selected.uiId = i;
            };
            shopEl.appendChild(div);
            if(i === 0) selected = item;
        });
    }

    // –û–°–ù–û–í–ù–û–ô –¶–ò–ö–õ THREE.JS (–£–ø—Ä–æ—â–µ–Ω–Ω—ã–π –¥–ª—è —Å—Ç–∞–±–∏–ª—å–Ω–æ—Å—Ç–∏)
    const scene = new THREE.Scene();
    scene.background = new THREE.Color(0x7bed9f);
    const camera = new THREE.PerspectiveCamera(75, window.innerWidth/window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ antialias: true });
    renderer.setSize(window.innerWidth, window.innerHeight);
    document.body.appendChild(renderer.domElement);

    scene.add(new THREE.AmbientLight(0xffffff, 0.8));
    const ground = new THREE.Mesh(new THREE.PlaneGeometry(100, 100), new THREE.MeshStandardMaterial({ color: 0x2ed573 }));
    ground.rotation.x = -Math.PI/2;
    scene.add(ground);

    const player = new THREE.Mesh(new THREE.CapsuleGeometry(0.3, 0.5), new THREE.MeshStandardMaterial({ color: 0x1e90ff }));
    player.position.y = 0.5;
    scene.add(player);
    camera.position.set(0, 10, 10);

    const move = { u:0, d:0, l:0, r:0 };
    const setupMove = (id, k) => {
        const el = document.getElementById(id);
        el.addEventListener('touchstart', (e) => { e.preventDefault(); move[k] = 1; });
        el.addEventListener('touchend', () => move[k] = 0);
    };
    setupMove('b-u','u'); setupMove('b-d','d'); setupMove('b-l','l'); setupMove('b-r','r');

    document.getElementById('b-a').onclick = () => {
        if(!isGameRunning) return;
        // –õ–æ–≥–∏–∫–∞ –ø–æ—Å–∞–¥–∫–∏ (–ö–ª–∞—Å—Ç–µ—Ä—ã)
        if(money >= selected.c && selected.stock > 0) {
            money -= selected.c;
            selected.stock--;
            const group = [];
            for(let i=0; i<3; i++) {
                const p = new THREE.Mesh(new THREE.SphereGeometry(0.2), new THREE.MeshStandardMaterial({ color: selected.cl }));
                p.position.set(player.position.x + (Math.random()-0.
                                                    
